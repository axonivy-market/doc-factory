<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.ivyteam.ivy.addons</groupId>
  <artifactId>doc-factory</artifactId>
  <version>7.1.0-SNAPSHOT</version>
  <packaging>iar</packaging>
  <organization>
    <name>AXON IVY AG</name>
  </organization>
  <parent>
    <groupId>ch.ivyteam.ivy.project</groupId>
    <artifactId>build.maven.iar</artifactId>
    <version>7.1.0-SNAPSHOT</version>
    <relativePath>../build.maven/iar</relativePath>
  </parent>
  <dependencies>
    <dependency>
        <groupId>ch.ivyteam.ivy.addons</groupId>
        <artifactId>third-party-license</artifactId>
		<version>1.1.0</version>
		<scope>provided</scope>
		<optional>true</optional>
    </dependency>
    <dependency>
        <groupId>com.aspose</groupId>
        <artifactId>aspose-cells</artifactId>
		<version>8.5.1</version>    
		<scope>provided</scope>
		<optional>true</optional>
    </dependency>
    <dependency>
        <groupId>com.aspose</groupId>
        <artifactId>aspose-pdf</artifactId>
		<version>10.6.1</version>    
		<scope>provided</scope>
		<optional>true</optional>
    </dependency>
    <dependency>
        <groupId>com.aspose</groupId>
        <artifactId>aspose-words</artifactId>
		<version>15.7.0</version>  
		<classifier>jdk16</classifier>  
		<scope>provided</scope>
		<optional>true</optional>
    </dependency>
    <dependency>
        <groupId>com.aspose</groupId>
        <artifactId>aspose-slides</artifactId>
		<version>15.6.0</version>    
		<scope>provided</scope>
		<optional>true</optional>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <extensions>true</extensions>
      </plugin>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId> 
		<artifactId>maven-dependency-plugin</artifactId>
		<configuration>
	      <includeArtifactIds>
	      	third-party-license,
	      	aspose-cells,
	      	aspose-pdf,
	      	aspose-words,
	      	aspose-slides
		  </includeArtifactIds>
		</configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
        <id>axonivy</id>
        <url>https://repo.axonivy.io/artifactory/ext-release-local</url>
        <releases>
           <enabled>true</enabled>
        </releases>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>        
     </repository>
  </repositories>
</project>
